\def\maketitle{%
	\ifbeamer@inframe
		\titlepage
	\else%
		\setbeamercolor{normal text}{fg=black!2   ,	bg=cddarkblue}
		\frame[plain,noframenumbering]{\titlepage}%
		\setbeamercolor{normal text}{fg=cddarkblue,	bg=black!2}
		
	\fi%
}
